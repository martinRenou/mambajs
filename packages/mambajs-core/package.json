{
  "name": "@emscripten-forge/mambajs-core",
  "version": "0.19.3",
  "description": "Mambajs core utilities",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf tsconfig.tsbuildinfo",
    "build": "yarn run clean && yarn run build:schema && yarn run build:esbuild && yarn run build:types",
    "build:schema": "echo 'Generating TypeScript types from schema...' && json2ts -i schema -o src/_interface --no-unknownAny --unreachableDefinitions && mkdir -p lib/_interface && cp -R ./src/_interface/* ./lib/_interface/.",
    "build:esbuild": "node esbuild.config.js",
    "build:types": "tsc --emitDeclarationOnly"
  },
  "files": [
    "lib/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "conda packages"
  ],
  "homepage": "https://github.com/emscripten-forge/mambajs",
  "bugs": {
    "url": "https://github.com/emscripten-forge/mambajs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emscripten-forge/mambajs.git"
  },
  "author": "Emscripten-forge developers",
  "license": "MIT",
  "dependencies": {
    "@emscripten-forge/untarjs": "^5.3.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "esbuild": "^0.24.0",
    "json-schema-to-typescript": "^15.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^5"
  }
}
